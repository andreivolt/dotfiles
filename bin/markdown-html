#!/usr/bin/env -S deno run --allow-read

import { marked } from "https://esm.sh/marked@12.0.0";

const markdown = await new Response(Deno.stdin.readable).text();
const content = marked(markdown);

const html = `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        :root {
            --text-color: #1a1a1a;
            --bg-color: #fdfcfa;
            --link-color: #0066cc;
            --quote-color: #555;
            --code-bg: #f4f4f4;
            --border-color: #e0e0e0;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: Georgia, 'Times New Roman', serif;
            font-size: 18px;
            line-height: 1.6;
            color: var(--text-color);
            background-color: var(--bg-color);
            margin: 0;
            padding: 20px;
        }

        article {
            max-width: 780px;
            margin: 0 auto;
            padding: 0 20px;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
            line-height: 1.2;
            margin-top: 1.2em;
            margin-bottom: 0.5em;
        }

        h1 {
            font-size: 2.5em;
            margin-top: 0.5em;
        }

        h2 {
            font-size: 1.8em;
        }

        h3 {
            font-size: 1.4em;
        }

        h4 {
            font-size: 1.2em;
        }

        p {
            margin: 1em 0;
            text-align: justify;
            hyphens: auto;
        }

        a {
            color: var(--link-color);
            text-decoration: underline;
            text-decoration-thickness: 1px;
            text-underline-offset: 2px;
        }

        a:hover {
            text-decoration-thickness: 2px;
        }

        blockquote {
            margin: 2em 0;
            padding: 0 0 0 1.5em;
            border-left: 4px solid var(--border-color);
            color: var(--quote-color);
            font-style: italic;
        }

        code {
            font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
            font-size: 0.9em;
            background-color: var(--code-bg);
            padding: 2px 6px;
            border-radius: 3px;
        }

        pre {
            background-color: var(--code-bg);
            padding: 1.5em;
            border-radius: 5px;
            overflow-x: auto;
            line-height: 1.4;
            margin: 2em 0;
        }

        pre code {
            background-color: transparent;
            padding: 0;
            font-size: 0.85em;
        }

        ul, ol {
            margin: 1.5em 0;
            padding-left: 2em;
        }

        li {
            margin: 0.5em 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 2em 0;
            font-size: 0.9em;
        }

        th, td {
            padding: 0.75em;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        th {
            font-weight: bold;
            background-color: var(--code-bg);
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 2em auto;
        }

        figure {
            margin: 2em 0;
        }

        figcaption {
            font-size: 0.9em;
            color: var(--quote-color);
            text-align: center;
            margin-top: 0.5em;
            font-style: italic;
        }

        hr {
            border: none;
            border-top: 1px solid var(--border-color);
            margin: 3em 0;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --text-color: #e0e0e0;
                --bg-color: #1a1a1a;
                --link-color: #66b3ff;
                --quote-color: #aaa;
                --code-bg: #2a2a2a;
                --border-color: #444;
            }
        }
    </style>
</head>
<body>
    <article>
        ${content}
    </article>
</body>
</html>`;

console.log(html);