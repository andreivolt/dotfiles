#!/usr/bin/env uv run -qs --with pyobjc-framework-Cocoa

import sys, os
from AppKit import NSPasteboard, NSPasteboardTypeFileURL
from Foundation import NSURL

def file_to_clipboard(file_path):
    if not os.path.exists(file_path):
        print(f"Error: File '{file_path}' does not exist.")
        return False
    file_url = NSURL.fileURLWithPath_(os.path.abspath(file_path))
    pasteboard = NSPasteboard.generalPasteboard()
    pasteboard.clearContents()
    return pasteboard.writeObjects_([file_url])

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python script.py <file_path>")
        sys.exit(1)
    print(f"File '{sys.argv[1]}' has been copied to the clipboard." if file_to_clipboard(sys.argv[1]) else "Failed to copy file to clipboard.")
