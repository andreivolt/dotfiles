# Swayimg configuration file.
# vim: filetype=dosini

[general]
# Set window size to match image size
size = image

# Disable overlay mode so it respects Hyprland floating rules
overlay = no

[viewer]
# Fit image to window if larger than window
scale = optimal

[font]
name = Tahoma
size = 14

[info]
# Disable on-screen info display (metadata, zoom level, etc.)
show = no
