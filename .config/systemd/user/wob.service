[Unit]
Description=Wayland overlay bar for volume/brightness
Documentation=https://github.com/francma/wob
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStartPre=/bin/sh -c 'rm -f /tmp/wobpipe && mkfifo /tmp/wobpipe'
ExecStart=/bin/sh -c 'tail -f /tmp/wobpipe | /usr/bin/wob'
ExecStopPost=/bin/rm -f /tmp/wobpipe
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target
